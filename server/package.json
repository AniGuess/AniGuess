{
  "name": "aniguess-server",
  "version": "1.0.0",
  "description": "",
  "main": "dist/index.js",
  "type": "module",
  "dependencies": {
    "@apollo/server": "^4.6.0",
    "@faker-js/faker": "7.6.0",
    "class-transformer": "0.5.1",
    "class-validator": "0.14.0",
    "connect-redis": "6.0.0",
    "cors": "2.8.5",
    "express": "^4.18.2",
    "express-session": "^1.17.3",
    "graphql": "^16.6.0",
    "ioredis": "^5.3.1",
    "pg": "^8.10.0",
    "reflect-metadata": "0.1.13",
    "type-graphql": "2.0.0-beta.1",
    "typeorm": "0.3.12"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.0",
    "@types/connect-redis": "^0.0.20",
    "@types/cors": "2.8.13",
    "@types/express": "4.17.17",
    "@types/graphql": "14.5.0",
    "@types/graphql-upload": "^16.0.0",
    "@types/node": "18.15.10",
    "bcrypt": "5.1.0",
    "eslint": "8.36.0",
    "nodemon": "2.0.22",
    "prettier": "2.8.7",
    "sqlite3": "5.1.6",
    "ts-node": "10.9.1",
    "typescript": "5.0.2"
  },
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "start": "ts-node src/index.ts",
    "start:dev": "nodemon src/index.ts",
    "start:docker:dev": "docker compose -f docker-compose.dev.yml up",
    "start:prod": "node dist/index.js",
    "migration:down": "ts-node --project tsconfig.json ./node_modules/typeorm/cli.js migration:revert -d ./src/dataSource.ts",
    "migration:down:prod": "typeorm migration:revert -d ./dist/dataSource.js",
    "migration:generate": "ts-node --project tsconfig.json ./node_modules/typeorm/cli.js migration:generate -d ./src/dataSource.ts",
    "migration:up": "ts-node --project tsconfig.json ./node_modules/typeorm/cli.js migration:run -d ./src/dataSource.ts",
    "migration:up:prod": "typeorm migration:run -d ./dist/dataSource.js"
  }
}
